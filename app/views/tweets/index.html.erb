<% if flash[:notice] %>
  <strong>
  <div class="flash">
   <%= flash[:notice] %>
  </div>
  </strong>
<% end %>

<% @tweets.each do |tweet| %>
 　<p>
 　 <strong>ツイート：</strong>
 　 <%= tweet.message %>
 　 <p>
 　     <strong>経過時間：</strong>
    <%= (Time.now - tweet.tdate).to_i / 60  %>
    <%= "分" %>
    </p>
 　 <%= link_to '表示', "/tweets/#{tweet.id}" %>
 　 <%= link_to '編集', "/tweets/#{tweet.id}/edit" %>
 　 <%= link_to '削除', "/tweets/#{tweet.id}", method: :delete %>
 　</p>
<% end %>

<p><%= link_to '新規追加', '/tweets/new' %></p>