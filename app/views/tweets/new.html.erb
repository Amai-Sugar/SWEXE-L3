<h1>新しくつぶやく</h1>
<% if @tweet.errors.present? %>
  <h3>エラーがあります。</h3>
    <h4><ul>
      <% @tweet.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    
  <% end %>
    </ul>
    </h4>
<% end %>

<%= form_with model: @tweet, local: true do |f| %>
  <%= f.label :message, '呟き' %>
  <%= f.text_field :message %>
  <%= f.submit '更新' %>
<% end %>
<%= link_to 'Topへ', '/' %>